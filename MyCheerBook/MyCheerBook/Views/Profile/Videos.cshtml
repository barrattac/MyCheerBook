@model BLL.VideosVM

@using BLL

@{
    ViewBag.Title = "Videos";
}

<div class="left" style="width: 79%">
    <h2>Videos</h2>

    @if (Model.Videos == null)
    {
        <p>You have not added any videos yet.</p>
    }
    else
    {
        <div>
            @for (int i = 0; i < Model.Videos.Count(); i++)
            {
                <div class="images">
                    @if (Model.Videos[i].Location[0].ToString() + Model.Videos[i].Location[1].ToString() == "ht")
                    {
                        <video src=@Url.Content(Model.Videos[i].Location) class="image" /><br />
                    }
                    @if (Model.Videos[i].Location[0].ToString() + Model.Videos[i].Location[1].ToString() != "ht")
                    {
                        <video src=@Url.Content("~/" + Model.Videos[i].Location) class="image" /><br />
                    }
                    @Model.Videos[i].Title<br />
                    @Html.ActionLink("Delete", "DeleteVideo", new { videoID = Model.Videos[i].ID }, new { @class = "red" })
                </div>
            }
        </div>
    }
</div>
<div class="right" style="position: absolute; width: 16%">
    @Html.Action("AddVideo")
</div>