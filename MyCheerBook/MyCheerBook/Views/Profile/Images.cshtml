@model BLL.ImagesVM

@using BLL

@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>
<div class="right">
    @Html.Action("AddImage")
</div>


@if (Model.Images == null)
{
    <p>You have not added any images yet.</p>
}
else
{
    <table>
        <tbody>
            <tr>
                @for (int i = 0; i < Model.Images.Count(); i++)
                {
                    <td>
                        <img src="@Url.Content(Model.Images[i].Location)" height="220" width="150" hspace="5px" vspace="5px" /><br/>
                        @Model.Images[i].Title
                    </td>
                }
            </tr>
        </tbody>
    </table>
}