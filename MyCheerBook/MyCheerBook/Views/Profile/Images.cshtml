@model BLL.ImagesVM

@using BLL

@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>
<div class="right">
    @Html.Action("AddImage")
</div>


@if (Model.Images == null)
{
    <p>You have not added any images yet.</p>
}
else
{
    <div>
        @for (int i = 0; i < Model.Images.Count(); i++)
        {
            <div class="img-thumbnail">
                <img src="@Url.Content(Model.Images[i].Location)" /><br />
                @Model.Images[i].Title
            </div>
        }
    </div>
}