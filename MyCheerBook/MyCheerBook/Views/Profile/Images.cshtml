@model BLL.ImagesVM

@using BLL

@{
    ViewBag.Title = "Images";
}

<div class="left" style="width: 79%">
    <h2>Images</h2>

    @if (Model.Images == null)
    {
        <p>You have not added any images yet.</p>
    }
    else
    {
        <div>
            @for (int i = 0; i < Model.Images.Count(); i++)
            {
                <div class="images">
                    @if (Model.Images[i].Location[0].ToString() + Model.Images[i].Location[1].ToString() == "ht")
                    {
                        <img src=@Url.Content(Model.Images[i].Location) class="image" /><br />
                    }
                    @if (Model.Images[i].Location[0].ToString() + Model.Images[i].Location[1].ToString() != "ht")
                    {
                        <img src=@Url.Content("~/" + Model.Images[i].Location) class="image" /><br />
                    }
                    @Model.Images[i].Title<br />
                    @Html.ActionLink("Delete", "DeleteImage", new { imageID = Model.Images[i].ID }, new { @class = "red" })
                </div>
            }
        </div>
    }
</div>
<div class="right" style="position: absolute; width: 16%">
    @Html.Action("AddImage")
</div>