@model BLL.ImagesVM

@{
    ViewBag.Title = "Images";
}

<div class="left" style="width: 79%">
    <h2>Images</h2>

    @if (Model == null || Model.Images.Count == 0)
    {
        <p style="text-align: center">This user has not added any images yet.</p>
    }
    else
    {
        <div>
            @for (int i = 0; i < Model.Images.Count(); i++)
            {
                <div class="images">
                    @if (Model.Images[i].Location[0].ToString() + Model.Images[i].Location[1].ToString() == "ht")
                    {
                        <img src=@Url.Content(Model.Images[i].Location) class="image" /><br />
                    }
                    @if (Model.Images[i].Location[0].ToString() + Model.Images[i].Location[1].ToString() != "ht")
                    {
                        <img src=@Url.Content("~/" + Model.Images[i].Location) class="image" /><br />
                    }
                    @Model.Images[i].Title<br />
                    @if (Session["UserID"] == Session["ProfileID"])
                    {
                        @Html.ActionLink("Delete", "DeleteImage", new { imageID = Model.Images[i].ID }, new { @class = "red", onclick = "return confirm('Are you sure you wish to delete image?');" })
                    }
                </div>
            }
        </div>
    }
</div>

@if (Session["UserID"] == Session["ProfileID"])
{
    <div class="right" style="position: absolute; width: 16%">
        @Html.Action("AddImage")
    </div>
}