@model BLL.ImagesVM

@using BLL

@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>
<div class="right">
    @Html.Action("AddImage")
</div>


@if(Model.Images == null)
{
    <p>You have not added any images yet.</p>
}
else
{
    <table>
        <tbody>
            @for (int i = 0; i < Model.Images.Count(); i = +6)
            {
                <tr>
                    <td><img src=@Model.Images[i].Location height="220" width="150"></td>
                    <td><img src=@Model.Images[i+1].Location height="220" width="150"></td>
                    <td><img src=@Model.Images[i+2].Location height="220" width="150"></td>
                    <td><img src=@Model.Images[i+3].Location height="220" width="150"></td>
                    <td><img src=@Model.Images[i+4].Location height="220" width="150"></td>
                    <td><img src=@Model.Images[i+5].Location height="220" width="150"></td>
                </tr>
            }
        </tbody>
    </table>
}