@model List<BLL.UserVM>

@{
    ViewBag.Title = "Friends";
}

<h2>Friends</h2>

<table>
    <thead>
        <tr>
            <th class="rightPadding">Picture</th>
            <th class="rightPadding">First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td class="rightpadding">@Html.Action("FriendPic", Model[i].ID)</td>
                <td class="rightPadding">@Html.ActionLink(Model[i].FirstName, "FriendsPage", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
                <td>@Html.ActionLink(Model[i].LastName, "FriendsPage", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
            </tr>
        }
    </tbody>
</table>
