@model List<BLL.UserVM>

<h3>You are waiting on @Model.Count users to accept your friend request.</h3>
<table style="margin-right: 15px;">
    <thead>
        <tr>
            <th class="rightPadding">First Name</th>
            <th class="rightPadding">Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td class="rightPadding">@Html.ActionLink(@Model[i].FirstName, "FriendsPage", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
                <td class="rightPadding">@Html.ActionLink(@Model[i].LastName, "FriendsPage", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
                <td>@Html.ActionLink("Cancel Request", "CancelRequest", "Profile", new { Model[i].ID }, new { @class = "pink", onclick = "return confirm('Are you sure you want to cancel this friend request?');" })</td>
            </tr>
        }
    </tbody>
</table>