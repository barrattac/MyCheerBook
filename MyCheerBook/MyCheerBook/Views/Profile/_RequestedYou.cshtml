@model List<BLL.UserVM>

<h3>@Model.Count users are waiting on you to accept thier friend request.</h3>
<table>
    <thead>
        <tr>
            <th class="rightPadding">First Name</th>
            <th class="rightPadding">Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td class="rightPadding">@Html.ActionLink(@Model[i].FirstName, "FriendsPage", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
                <td class="rightPadding">@Html.ActionLink(@Model[i].LastName, "FriendsPage", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
                <td>@Html.ActionLink("Accept Friend Request", "MakeFriends", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
                <td>@Html.ActionLink("Deny Friend Request", "CancelRequest", "Profile", new { Model[i].ID }, new { @class = "pink", onclick = "return confirm('Are you sure you want to deny this friend request?');" })</td>
            </tr>
        }
    </tbody>
</table>