@model List<BLL.UserVM>

<h3>You are waiting on @Model.Count users to accept your friend request.</h3>
<table>
    <thead style="display: block; ">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody class="scroll" style="display: block; ">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Html.ActionLink(@Model[i].FirstName, "FriendsPage", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
                <td>@Html.ActionLink(@Model[i].LastName, "FriendsPage", "Profile", new { Model[i].ID }, new { @class = "pink" })</td>
                <td>@Html.ActionLink("Cancel Request", "CancelRequest", "Friends", new { Model[i].ID }, new { @class = "pink", onclick = "return confirm('Are you sure you want to deny this friend request?');" })</td>
            </tr>
        }
    </tbody>
</table>