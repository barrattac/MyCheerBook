@model BLL.OrganizerFM

<div style="clear:both;">
    <div style="float: right; width: 600px; padding-right: 50px;">
        <div class="left" style="float: left; display: inline-block; width: 200px">
            <h2 style="text-align: left;">Login</h2>
            @ViewBag.Error
            @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
            {
                <div class="error">
                    @ViewBag.LoginError
                </div>
                <div>
                    @Html.LabelFor(m => m.Email)
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(m => m.Password)
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                    </div>
                </div>
                <input type="submit" value="Login" />
            }
            <div>
                @Html.ActionLink("Forgot Password", "ForgotPass", "Mail", new { }, new { @class = "red" })
            </div>
        </div>
        <div class="middle" style="float: left; display: inline-block; width: 350px">
            <h2 style="text-align: left;">Register</h2>
            @using (Html.BeginForm("Register", "Accounts", FormMethod.Post))
            {
                <div class="error">
                    @ViewBag.RegisterError
                </div>
                <div style="float: left; display: inline-block;">
                    @Html.LabelFor(m => m.FirstName)
                    <div>
                        @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First Name", size = 15 })
                    </div>
                </div>
                <div style="float: left; padding-left: 25px; display: inline-block;">
                    @Html.LabelFor(m => m.LastName)
                    <div>
                        @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last Name", size = 15 })
                    </div>
                </div>
                <div style="clear: both;">
                    @Html.LabelFor(m => m.Email)
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", size = 40 })
                    </div>
                </div>
                <div style="float: left; display: inline-block;">
                    @Html.LabelFor(m => m.Password)
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", size = 15 })
                    </div>
                </div>
                <div style="float: left; padding-left: 25px; display: inline-block; ">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", size = 15 })
                    </div>
                </div>
                <div style="clear: both;">
                    <div>
                        <input type="submit" value="Register" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>