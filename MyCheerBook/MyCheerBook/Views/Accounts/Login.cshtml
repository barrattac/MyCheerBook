@model BLL.UserFM

<div class="left" style="margin-left: 17%;">
    <h2 style="text-align: left;">Login</h2>
    @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
    {
        <div class="error">
            @ViewBag.LoginError
        </div>
        <div>
            @Html.LabelFor(m => m.Email)
            <div>
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
            </div>
        </div>
        <div>
            @Html.LabelFor(m => m.Password)
            <div>
                @Html.PasswordFor(m => m.Password)
            </div>
        </div>
        <input type="submit" value="Login" />
    }
    <div>
        @Html.ActionLink("Forgot Password", "ForgotPass")
    </div>
</div>
<div class="middle">
    <h2 style="text-align: left;">Register</h2>
    @using (Html.BeginForm("Register", "Accounts", FormMethod.Post))
    {
        <div class="error">
            @ViewBag.RegisterError
        </div>
        <div style="float: left; display: inline-block;">
            @Html.LabelFor(m => m.FirstName)
            <div>
                @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First Name", size = 15 })
            </div>
        </div>
        <div style="float: left; display: inline-block;">
            @Html.LabelFor(m => m.LastName)
            <div>
                @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last Name", size = 15 })
            </div>
        </div>
        <div style="clear: both;">
            @Html.LabelFor(m => m.Email)
            <div>
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", size = 36 })
            </div>
        </div>
        <div style="float: left; display: inline-block;">
            @Html.LabelFor(m => m.Password)
            <div>
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", size = 15 })
            </div>
        </div>
        <div style="float: left; display: inline-block;">
            @Html.LabelFor(m => m.ConfirmPassword)
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", size = 15 })
            </div>
        </div>
        <div style="clear: both;">
            <div>
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }
</div>