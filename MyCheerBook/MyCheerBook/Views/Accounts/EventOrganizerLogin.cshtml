@model BLL.OrganizerFM

<div style="float: right; width: 600px; padding-right: 50px;">
    <div class="left" style="float: left; display: inline-block; width: 200px">
        <h2 style="text-align: left;">Login for Event Organizers</h2>
        @ViewBag.Error
        @using (Html.BeginForm("EventOrganizerLogin", "Accounts", FormMethod.Post))
        {
            <div class="error">
                @ViewBag.LoginError
            </div>
            <div>
                @Html.LabelFor(m => m.Email)
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
                </div>
            </div>
            <div>
                @Html.LabelFor(m => m.Password)
                <div>
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                </div>
            </div>
            <input type="submit" value="Login" />
        }
        <div>
            @Html.ActionLink("Forgot Password", "ForgotPass", "Mail", new { }, new { @class = "red" })
        </div>
    </div>
    <div class="middle" style="float: left; display: inline-block; width: 350px">
        <h2 style="text-align: left;">Registration for </br> Event Organizers</h2>
        @using (Html.BeginForm("EventOrganizerRegister", "Accounts", FormMethod.Post))
        {
            <div class="error">
                @ViewBag.RegisterError
            </div>
            <div style="float: left; display: inline-block;">
                @Html.Label("Company Name")
                <div>
                    @Html.TextBoxFor(m => m.CompanyName, new { @placeholder = "Company Name", size = 40 })
                </div>
            </div>
            <div style="float: left; display: inline-block;">
                @Html.Label("Email")
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", size = 16 })
                </div>
            </div>
            <div style="float: left; display: inline-block; padding-left:10px;">
                @Html.Label("Phone Number")
                <div>
                    @Html.TextBoxFor(m => m.Contact.Phone, new { @placeholder = "Phone Number", size = 16 })
                </div>
            </div>
            <div style="float: left; display: inline-block;">
                @Html.Label("Password")
                <div>
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", size = 16 })
                </div>
            </div>
            <div style="float: left; display: inline-block; padding-left: 10px;">
                @Html.Label("Confirm Password")
                <div>
                    @Html.PasswordFor(m => m.ConfirmPass, new { @placeholder = "Password", size = 16 })
                </div>
            </div>
            <div style="clear: both;">
                @Html.Label("Address")
                <div>
                    @Html.TextBoxFor(m => m.Contact.Line1, new { @placeholder = "Address", size = 40 })
                </div>
            </div>
            <div>
                <div>
                    @Html.TextBoxFor(m => m.Contact.Line2, new { @placeholder = "Address Line 2", size = 40 })
                </div>
                <div>
                    <div style="float: left; display: inline-block;">
                        @Html.TextBoxFor(m => m.Contact.City, new { @placeholder = "City", size = 19 })
                    </div>
                    <div style="float: left; display: inline-block; padding-left: 4px;">
                        @Html.TextBoxFor(m => m.Contact.State, new { @placeholder = "State", size = 2 })
                    </div>
                    <div style="float: left; display: inline-block; padding-left: 4px;">
                        @Html.TextBoxFor(m => m.Contact.Zip, new { @placeholder = "Zip Code", size = 5 })
                    </div>
                </div>
            </div>
            <div style="clear: both;">
                @Html.Label("Website")
                <div>
                    @Html.TextBoxFor(m => m.Contact.Website, new { @placeholder = "Website", size = 40 })
                </div>
            </div>
            <div style="clear: both;">
                <div>
                    <input type="submit" value="Register" />
                </div>
            </div>
        }
    </div>
</div>