@model BLL.PasswordFM

@{
    ViewBag.Title = "Change Password";
}

<h2>Change Password</h2>

@ViewBag.ErrorMessage

@using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post))
{
    <div class="error">
        @ViewBag.ErrorMessage
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @placeholder="Email" })
        </div>
    </div>    <div class="form-group">
        @Html.LabelFor(m => m.CurrentPass)
        <div class="col-md-10">
            @Html.PasswordFor(m => m.CurrentPass, new { @placeholder = "Current Password" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPass)
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPass, new { @placeholder = "New Password" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPass)
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPass, new { @placeholder = "Confirm Password" })
        </div>
    </div>
    <input type="submit" value="Change Password" />
}
